{
  "name": "server",
  "version": "0.1.0",
  "private": true,
  "main": "dist/app.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules src/app.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/app.js",
    "pm2:start": "pnpm exec pm2 start ecosystem.config.js --update-env",
    "pm2:stop": "pnpm exec pm2 stop ecosystem.config.js || true",
    "pm2:restart": "pnpm exec pm2 restart ecosystem.config.js",
    "pm2:logs": "pnpm exec pm2 logs",
    "run:pm2": "npx pm2 start ecosystem.config.js --update-env",
    "run:pm2:stop": "npx pm2 stop ecosystem.config.js || true",
    "run:pm2:restart": "npx pm2 restart ecosystem.config.js",
    "run:pm2:logs": "npx pm2 logs",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "seed": "ts-node ./prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "4.16.2",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "jsonwebtoken": "^9.0.0",
    "mssql": "^11.0.0",
    "p-limit": "^4.0.0",
    "prisma": "^4.15.0",
    "sqlite3": "^5.1.6",
    "undici": "^5.12.0",
    "web-push": "^3.6.7",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.17",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.4.2",
    "@types/ws": "^8.18.1",
    "pm2": "^5.3.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6",
    "zod": "^4.3.5"
  }
}
