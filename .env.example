# ============================================================================
# CYBERSENSE ENVIRONMENT VARIABLES
# ============================================================================
# Copy this file to .env and replace values for your environment
# For production, use strong random values for secrets
# ============================================================================

# === SERVER CONFIGURATION ===
NODE_ENV=development
PORT=4000

# === DATABASE ===
# SQLite (development/small deployments):
DATABASE_URL="file:./dev.db"

# PostgreSQL (production):
# DATABASE_URL="postgresql://user:password@localhost:5432/cybersense"

# === AUTHENTICATION ===
# IMPORTANT: Generate a strong random secret for production!
# Command: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=change_this_to_a_strong_random_secret_32_chars_minimum

# Initial admin user (created on first seed)
# Change these after first login!
ADMIN_EMAIL=admin@local
ADMIN_PASSWORD=Admin123!

# === WEB PUSH NOTIFICATIONS ===
# Generate VAPID keys with: npx web-push generate-vapid-keys
# Command (from server/): npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_SUBJECT=mailto:your-email@example.com

# === APPLICATION URLS ===
# Development:
WEB_URL=http://localhost:5173
SERVER_URL=http://localhost:4000/api
CORS_ORIGIN=http://localhost:5173

# Production example:
# WEB_URL=https://yourdomain.com
# SERVER_URL=https://yourdomain.com/api
# CORS_ORIGIN=https://yourdomain.com

# === SCHEDULER ===
# Number of concurrent monitor checks to run
# Higher = more parallel checks, but uses more resources
CONCURRENCY=10

# === OPTIONAL: EMAIL NOTIFICATIONS (future feature) ===
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# === OPTIONAL: SLACK INTEGRATION (future feature) ===
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# === LOG LEVEL ===
# Options: debug, info, warn, error
LOG_LEVEL=info

# === SESSION & SECURITY ===
# Session timeout in minutes
SESSION_TIMEOUT=1440

# Max login attempts before lockout
MAX_LOGIN_ATTEMPTS=5

# Lockout duration in minutes
LOCKOUT_DURATION=15
